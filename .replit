run = "python -m uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload"

[nix]
channel = "stable-23.11"

[env]
PYTHONPATH = "$REPL_HOME"
PORT = "8000"
MODE = "local"

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "pyproject.toml"]

[languages]

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

[deployment]
run = ["sh", "-c", "python -m uvicorn app.main:app --host 0.0.0.0 --port $PORT"]